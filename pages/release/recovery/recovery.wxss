/* pages/release/recovery/recovery.wxss */
.release_title{
  width: 100%;
  height: auto;
  font-size: 40rpx;
  padding: 30rpx 0;
}
.upload_word{
  width: 100%;
  height: auto;
  font-size: 30rpx;
  line-height: 60rpx;
  padding-bottom: 20rpx;
  color: #484848;
}
.upload_word text{
  width: 100%;
  height: auto;
  font-size: 26rpx;
  line-height: 60rpx;
  padding-bottom: 20rpx;
  color: #484848;
}
.upload_domain{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  background-color: #ff7f50;
  border-radius: 10rpx;
  margin-bottom: 50rpx;
}
.recovery_input{
  width: 100%;
  height: auto;
  margin-bottom: 50rpx;
}
.recovery_input view{
  width: 100%;
  height: auto;
  border-bottom: 1px solid #cdced3;
  overflow: hidden;
  padding: 20rpx 0;
  color: #484848;
  font-size: 30rpx;
}
.recovery_input view text{
  width: 30%;
  height: auto;
  text-align: left;
  float: left;
  font-size: 26rpx;
}
.recovery_input view input{
  width: 70%;
  height: auto;
  text-align: left;
  float: left;
  font-size: 30rpx;
}
.recovery_input .address{
  border-top: 1px solid #cdced3;
}
.recovery_input .address image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  float: left;
  margin-right: 20rpx;
  margin-top: 10rpx;
}
.recovery_input .address view{
  width: 80%;
  border: none;
  float: left;
  padding: 0;
  margin-bottom: 10rpx;
}
.recovery_input .address view text{
  width: 50%;
  float: left;
}