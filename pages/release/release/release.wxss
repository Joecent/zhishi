/* pages/release/release/release.wxss */
.release_title{
  width: 100%;
  height: auto;
  font-size: 40rpx;
  padding: 30rpx 0;
}
.release_button{
  width: 100%;
  height: auto;
  padding: 40rpx 0;
  border-top: 1px solid #cdced3;
  border-left: none;
  border-right: none;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}
.release_button view{
  width: 45%;
  height: auto;
  float: left;
  padding: 50rpx 0;
  border: 1px solid #eeeeee;
  border-radius: 10rpx;
  margin:0 auto;
}
.release_bind view:active{
  background-color: #f0f0f7;
}
.release_button view image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}
.release_button view text{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: block;
  font-size: 30rpx;
  text-align: center;
  margin-top: 40rpx;
}
.upload_word{
  width: 100%;
  height: auto;
  font-size: 30rpx;
  line-height: 60rpx;
  padding-bottom: 20rpx;
  color: #484848;
}
.upload_word text{
  width: 100%;
  height: auto;
  font-size: 26rpx;
  line-height: 60rpx;
  padding-bottom: 20rpx;
  color: #484848;
}