/* pages/release/adddetails/adddetails.wxss */
page{
  background-color: #f9f9f9;
}
.container{
  width: 100%;
}
.product{
  width: 90%;
  padding: 30rpx 5%;
  overflow: hidden;
  background-color: #fff;
}
.product_top{
  margin-top: 20rpx;
  padding-top: 0;
  padding-bottom: 120rpx;
}
.addphoto{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0rpx 0;
  position: relative;
}
.addphoto image{
  width: 138rpx;
  height: 184rpx;
  float: left;
}
.addphoto .shuoming{
  width:60%;
  height:92rpx;
  position:absolute;
  top:35rpx;
  left:32%;
  font-size:28rpx;
  color:#aaaaaa;
}
.book_det{
  width: 100%;
}
.book_det .book_name{
  border-bottom: 1px solid #eeeeee;
  font-size: 30rpx;
  overflow: hidden;
  color: #484848;
}
.book_det .book_name label{
  width: 15%;
  height: 100rpx;
  line-height: 100rpx;
  float: left
}
.book_det .book_name input{
  width: 85%;
  height: 100rpx;
  line-height: 100rpx;
  float: left
}
.fqqrms{
  width: 100%;
  height: auto;
  background-color: #fff;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
}
.fqqrms .fq{
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  background-color: #eeeeee;
  color: #575656;
}
.fqqrms .qrms{
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  background-color: #ff7f50;
  color: #fff;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
}