/* pages/books/search/search.wxss */
.classification{
  width: 100%;
  height: auto;
  margin-top: 0;
}
.classification .title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.classification .title .title_name{
  font-size: 30rpx;
  color: #484848;
  float: left;
}
.classification .search{
  width:90%;
  height:auto;
  border-bottom:1px solid #eeeeee;
  position:fixed;
  top:0;
  left:5%;
  z-index:9999;
  background-color: #fff;
}
.classification .search input{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.classification .outside{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 62rpx;
}
.classification .none{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
}
.outside .product{
  width: 100%;
  padding: 50rpx 0;
  border-bottom: 1px solid #eeeeee;
  overflow: hidden;
}
.outside .product image{
  width: 138rpx;
  height: 184rpx;
  display: block;
  float: left;
}
.outside .book_det{
  float: left;
  width: 76%;
  margin-left: 20rpx;
  position: relative;
}
@media screen and (max-width: 320px) {
  .outside .book_det{
    float: left;
    width: 72%;
    margin-left: 20rpx;
    position: relative;
  }
}
.outside .book_det .book_name{
  font-size: 32rpx;
  color: #484848;
  margin-bottom: 15rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.outside .book_det .book_introduce{
  font-size: 28rpx;
  height: 80rpx;
  color: #999999;
  margin-bottom: 15rpx;
  overflow : hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.outside .book_det .book_press{
  width: 380rpx;
  height: auto;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.book_press text{
  font-size: 28rpx;
  margin-right: 5rpx;
  float: left;
}
.book_press .press_name{
  width: 100%;
  height: auto;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  color: #a2b3ce;
}
.book_press .press_address{
  color: #a2b3ce;
}
.press_price{
  color: #ed7a50;
  font-size: 28rpx;
  float: right;
  position: absolute;
  bottom: 0;
  right: 0;
}
.book_press .press_price_y{
  color: #c4c4c4;
  text-decoration:line-through; 
}
.position{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 30rpx;
  font-size: 27rpx;
}
.outside .product .position .acvter{
  width: 40rpx;
  height: 40rpx;
  display: block;
  border-radius: 40rpx;
  margin-right: 10rpx;
}
.outside .product .position .acvter_nv{
  width: 24rpx;
  height: 24rpx;
  display: block;
  margin-right: 10rpx;
  margin-top: 8rpx;
}
.outside .product .position .position_img{
  width: 20rpx;
  height: 20rpx;
  display: block;
  float: right;
  margin-top: 11.5rpx;
  margin-right: 10rpx;
}
.outside .product .position .position_word{
  float: right; 
}
.sharer_name{
  float: left;
  margin-right: 10rpx;
  font-size: 30rpx;
}