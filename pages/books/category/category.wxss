/* pages/books/category/category.wxss */
.search{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border: 1px solid #b3b3b3;
  border-radius: 5px;
  position: relative;
}
.search image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
.search input{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10%;
  font-size: 24rpx;
}
.classification{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}
.classification .title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.classification .title .title_name{
  font-size: 30rpx;
  color: #484848;
  float: left;
}
.classification .icon{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.classification .icon view{
  width: 20%;
  height: auto;
  text-align: center;
  margin: 20rpx 0;
  float: left;
}
.classification .icon .line{
  width: 100%;
  height: 4rpx;
  background-color: #eeeeee;
  margin: 0;
}
.classification .icon view image{
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 0 auto;
}
.classification .icon view text{
  width: 100%;
  font-size: 26rpx;
  display: block;
  height: auto;
  margin-top: 20rpx;
  color: #666666;
}