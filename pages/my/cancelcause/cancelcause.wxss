/* pages/my/cancelcause/cancelcause.wxss */
page{
  background-color: #f9f9f9;
}
.container{
  width: 100%;
}
.mxbq{
  width: 90%;
  padding: 0 5%;
  height: auto;
  margin-top: 0;
  background-color: #fff;
  padding-bottom: 120rpx;
}
.mxbq view{
  width: 100%;
  height: auto;
  overflow: hidden;
  color: #484848;
}
.mxbq view label{
  width: 100%;
  height: auto;
  line-height: 100rpx;
  float: left;
  font-size: 32rpx;
  position: relative;
  margin-top:10rpx;
}
.mxbq view label view{
  width:100%;
  height:auto;
  float:right;
  border-bottom:none;
  margin-bottom:20rpx;
  padding-top:20rpx;
}
.mxbq view label text{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #646464;
  display: block;
  float: left;
  padding: 0 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 20rpx 1%;
  background-color: #f3f2f2;
}
.mxbq view textarea{
  width: 95%;
  line-height: 50rpx;
  float: right;
  font-size: 28rpx;
  background-color:#f3f2f2;
  padding: 20rpx 2.5%;
  border-radius: 30rpx;
}
.fqqrms{
  width: 100%;
  height: auto;
  background-color: #fff;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
}
.fqqrms .fq{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  background-color: #eeeeee;
  color: #575656;
}
.fqqrms .qrms{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  background-color: #ff7f50;
  color: #fff;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
}
.mxbq view label .active-tag{
  background-color: #ff7f50;
  color: #fff;
}