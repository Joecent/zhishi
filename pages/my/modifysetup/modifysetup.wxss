/* pages/my/modifysetup/modifysetup.wxss */
view{
  width: 100%;
  margin-bottom: 30rpx;
  position: relative;
}
input{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #aaaaaa;
  border-bottom: 1px solid #dddddd;
}
.code{
  width: auto;
  background-color: #ff7f50;
  border-radius: 10rpx;
  font-size: 30rpx;
  position: absolute;
  color: #fff;
  top: 0;
  right: 0;
  z-index: 9999;
}
button{
  background-color: #ff7f50;
  color: #fff;
  border: none;
}
.hidden{
  display: none;
}