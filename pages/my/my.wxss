/* pages/my/my.wxss */
.editdata{
  width: 100%;
  height: 100rpx;
  padding: 50rpx 0;
  border-bottom: 1px solid #eeeeee;
  font-size: 30rpx;
  position: relative;
  color: #484848;
}
.editdata text{
  width: 100%;
  height: auto;
  display: block;
  margin-bottom: 20rpx;
}
.editdata .name{
  font-size: 34rpx;
}
.editdata .edit{
  font-size: 32rpx;
}
.editdata image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  position: absolute;
  top: 50rpx;
  right: 60rpx;
  border-radius: 100rpx;
}
.editdata .join{
  width:40rpx;
  height:40rpx;
  display:block;
  position:absolute;
  top:80rpx;
  right:0;
}
.editoperation{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eeeeee;
  font-size: 34rpx;
  position: relative;
}
.editoperation .edit_l{
  float: left;
  color: #484848;
}
.editoperation .edit_r{
  float: right;
  margin-right: 80rpx;
  font-size: 28rpx;
  color: #787878;
}
.editoperation image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  position: absolute;
  top: 35rpx;
  right: 0;
}
.release{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}
.release image{
  width: 100rpx;
  height: 100rpx;
  display: block;
}